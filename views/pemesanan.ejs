<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Form Pemesanan - Firdaus Rent Car</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f9f9f9;
    }
    .form-section {
      background: #ffffff;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }
    .form-control:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="#">Firdaus Rent Car</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="index.html">Beranda</a></li>
          <li class="nav-item"><a class="nav-link" href="armada.html">Armada</a></li>
          <li class="nav-item"><a class="nav-link active" href="#">Pemesanan</a></li>
          <li class="nav-item"><a class="nav-link" href="kontak.html">Kontak</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Form Pemesanan -->
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="form-section animate__animated animate__fadeInUp">
            <h2 class="text-center mb-4">Formulir Pemesanan Mobil</h2>
            <form>
              <div class="mb-3">
                <label for="nama" class="form-label">Nama Lengkap</label>
                <input type="text" class="form-control" id="nama" required>
              </div>
              <div class="mb-3">
                <label for="telepon" class="form-label">Nomor Telepon</label>
                <input type="tel" class="form-control" id="telepon" required>
              </div>
              <div class="mb-3">
                <label for="mobil" class="form-label">Pilih Mobil</label>
                <select class="form-select" id="mobil" required>
                  <option selected disabled>Pilih tipe mobil</option>
                  <option>Avanza</option>
                  <option>Innova</option>
                  <option>Alphard</option>
                  <option>Camry</option>
                  <option>Altis</option>
                  <option>Vios</option>
                </select>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="tanggalMulai" class="form-label">Tanggal Mulai</label>
                  <input type="date" class="form-control" id="tanggalMulai" required>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="tanggalSelesai" class="form-label">Tanggal Selesai</label>
                  <input type="date" class="form-control" id="tanggalSelesai" required>
                </div>
              </div>
              <div class="mb-3">
                <label for="alamat" class="form-label">Alamat Penjemputan</label>
                <textarea class="form-control" id="alamat" rows="3" required></textarea>
              </div>
              <div class="mb-3">
                <label for="catatan" class="form-label">Catatan Tambahan</label>
                <textarea class="form-control" id="catatan" rows="3"></textarea>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg px-5">Pesan Sekarang</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>
</html>
